---
export interface Props {
	items: { title: string; href?: string }[];
}

const { items } = Astro.props;
---

<nav class="breadcrumbs">
	<div class="container">
		<ol>
			{items.map((item, index) => (
				<li class={index === items.length - 1 ? 'current' : ''}>
					{item.href ? (
						<a href={item.href}>{item.title}</a>
					) : (
						item.title
					)}
				</li>
			))}
		</ol>
	</div>
</nav>

<style>
	.breadcrumbs {
		padding: 15px 0;
		background: transparent;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		margin-bottom: 40px;
	}

	.breadcrumbs .container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.breadcrumbs ol {
		display: flex;
		align-items: center;
		list-style: none;
		margin: 0;
		padding: 0;
		font-size: 14px;
		font-weight: 400;
		color: #666;
	}

	.breadcrumbs ol li {
		display: flex;
		align-items: center;
	}

	.breadcrumbs ol li + li::before {
		content: "â€º";
		margin: 0 12px;
		color: #999;
		font-size: 16px;
	}

	.breadcrumbs a {
		color: #666;
		text-decoration: none;
		transition: color 0.3s ease;
		font-weight: 400;
	}

	.breadcrumbs a:hover {
		color: #333;
	}

	.breadcrumbs .current {
		color: #333;
		font-weight: 500;
	}
</style>
