---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found" description="The page you are looking for does not exist.">
  <Header />

  <main class="main">
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>404</h1>
              <p>Page Not Found</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section id="404" class="error-section section">
      <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
          <div class="col-lg-6 text-center">
            <div class="error-content">
              <h2>Oops! The page you're looking for doesn't exist.</h2>
              <p class="mt-3">The page may have been moved or deleted.</p>
              <a href="/" class="btn btn-primary mt-4">
                <i class="bi bi-house-door me-2"></i>
                Back to Home
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-title {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/assets/img/us-banner.webp');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 100px 0 60px;
    min-height: 300px;
    display: flex;
    align-items: center;
  }

  .page-title h1 {
    font-size: 6rem;
    font-weight: 700;
    margin-bottom: 0;
  }

  .page-title p {
    font-size: 1.5rem;
    margin-bottom: 0;
  }

  .error-section {
    padding: 80px 0;
  }

  .error-content h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .error-content p {
    font-size: 1.1rem;
    color: #666;
  }

  .btn-primary {
    background: var(--bs-primary);
    border: none;
    padding: 12px 30px;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: var(--bs-primary-hover);
    transform: translateY(-2px);
  }
</style>
